from datetime import datetime as d 
import time, sys

while True:
        file = "apache.txt"   
        a = open(file, "r")
        lines = a.readlines()
        #scan 3 line, word "active"
        state = lines[2].strip()[8:14] 

        if state == "active":
                # add to stdout buffer
                sys.stdout.write('.')
                # write buffer contents to screen
                sys.stdout.flush()  

        elif state == "failed":
                print "\n", d.now() , "Warning" 

        else:
                print "not important" 

        time.sleep(1)

