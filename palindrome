a = input('Please enter a word: ')

word = str(a)
print(word)

reverse = word[::-1]

if reverse == word:
    print('This is palindrome')
else:
    print('It is not a palindrome')



#or 

wrd = input("Please enter a word: ")
wrd = str(wrd)

rvs = wrd[::-1]
print(rvs)
if wrd == rvs:
    print("this is palindrome")
else:
    print("This is not a palindrome")
